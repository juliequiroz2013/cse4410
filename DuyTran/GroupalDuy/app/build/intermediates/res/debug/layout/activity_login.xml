<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_margin="0dp"
    android:background="@color/app_background_color"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/groupalName"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="?android:attr/actionBarSize"
        android:textColor="#ffffff"
        android:textSize="80dp" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="email address"
        android:textColorHint="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/groupalName"
        android:layout_alignStart="@+id/groupalName"
        android:layout_alignRight="@+id/groupalName"
        android:layout_alignEnd="@+id/groupalName" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/input_email"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@+id/groupalName"
        android:layout_alignStart="@+id/groupalName"
        android:layout_alignRight="@+id/groupalName"
        android:layout_alignEnd="@+id/groupalName" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login in/sign in"
        android:textColor="#ffffff"
        android:background="@color/actionbar_background_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="43dp"
        android:onClick="confirmLogin"
        android:layout_below="@+id/input_password"
        android:layout_alignLeft="@+id/input_password"
        android:layout_alignStart="@+id/input_password" />

    <Button
        android:id="@+id/RegristerPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regrister"
        android:textColor="#ffffff"
        android:background="@color/actionbar_background_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:onClick="RegisterUser"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/input_password"
        android:layout_alignEnd="@+id/input_password"
        android:clickable="true" />

</RelativeLayout>
