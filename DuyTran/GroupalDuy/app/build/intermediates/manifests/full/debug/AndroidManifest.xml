<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.groupal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.david.groupal.LoginActivity"
            android:background="#FFFFFF"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.david.groupal.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.example.david.groupal.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name="com.example.david.groupal.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.david.groupal.PersonalPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name="com.example.david.groupal.CalendarView"
            android:label="@string/title_activity_calendar_view" >
        </activity>
        <activity
            android:name="com.example.david.groupal.CalendarAdapter"
            android:label="@string/title_activity_calendar_adapter" >
        </activity>
        <activity
            android:name="com.example.david.groupal.PeopleActivity"
            android:label="@string/title_activity_people"
            android:parentActivityName="com.example.david.groupal.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.david.groupal.LoginActivity" />
        </activity>
        <activity
            android:name="com.example.david.groupal.PersonalPage"
            android:label="@string/title_activity_personal_page"
            android:parentActivityName="com.example.david.groupal.PeopleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.david.groupal.PeopleActivity" />
        </activity>
        <activity
            android:name="com.example.david.groupal.CalenderViewActivity"
            android:label="@string/title_activity_calender_view" >
        </activity>
        <activity
            android:name="com.example.david.groupal.RegristerActivity"
            android:label="@string/title_activity_regrister" >
        </activity>
    </application>

</manifest>