<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.groupal" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:background="#FFFFFF"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".PersonalPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>
        <activity
            android:name=".CalendarView"
            android:label="@string/title_activity_calendar_view" >
        </activity>
        <activity
            android:name=".CalendarAdapter"
            android:label="@string/title_activity_calendar_adapter" >
        </activity>
        <activity
            android:name=".PeopleActivity"
            android:label="@string/title_activity_people"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.david.groupal.LoginActivity" />
        </activity>
        <activity
            android:name=".PersonalPage"
            android:label="@string/title_activity_personal_page"
            android:parentActivityName=".PeopleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.david.groupal.PeopleActivity" />
        </activity>
        <activity
            android:name=".CalenderViewActivity"
            android:label="@string/title_activity_calender_view" >
        </activity>
    </application>

</manifest>
